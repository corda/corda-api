{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://corda.r3.com/net/corda/schema/configuration/rpc/1.0/corda.rpc.json",
  "title": "Corda RPC Configuration Schema",
  "description": "Configuration schema for the RPC subsection.",
  "type": "object",
  "default": {},
  "properties": {
    "address": {
      "description": "",
      "type": "string",
      "default": "0.0.0.0:8888"
    },
    "context": {
      "description": "",
      "type": "object",
      "default": {},
      "properties": {
        "description": {
          "description": "",
          "type": "string",
          "default": "Exposing RPCOps interfaces as OpenAPI WebServices"
        },
        "title": {
          "description": "",
          "type": "string",
          "default": "HTTP RPC"
        }
      }
    },
    "maxContentLength": {
      "description": "",
      "type": "integer",
      "default": 2000000000
    },
    "endpoint": {
      "description": "",
      "type": "object",
      "default": {},
      "properties": {
        "timeoutMs": {
          "description": "",
          "type": "integer",
          "default": 12000
        }
      }
    }
  }
}