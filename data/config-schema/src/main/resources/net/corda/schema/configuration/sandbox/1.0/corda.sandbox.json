{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://corda.r3.com/net/corda/schema/configuration/sandbox/1.0/corda.sandbox.json",
  "title": "Corda Sandbox Configuration Schema",
  "description": "Configuration schema for the sandbox subsection.",
  "type": "object",
  "properties": {
    "cache": {
      "description": "Settings for sandbox caching",
      "type": "object",
      "default": {},
      "properties": {
        "size": {
          "description": "The maximum number cached sandboxes.",
          "type": "integer",
          "minimum": 0,
          "default": 2
        }
      }
    }
  }
}