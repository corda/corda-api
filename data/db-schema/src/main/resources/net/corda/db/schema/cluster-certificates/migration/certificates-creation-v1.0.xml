<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <property name="schema.name" value="CERTIFICATES"/>

    <changeSet author="R3.Corda" id="certificates-creation-v1.0">

        <sql>
            CREATE SCHEMA IF NOT EXISTS CERTIFICATES;
        </sql>

        <createTable tableName="cluster_certificates" schemaName="${schema.name}">
            <column name="tenant_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="alias" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="raw_certificate" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="cluster_certificates" columnNames="tenant_id, alias" constraintName="certificates_pk"
                       schemaName="${schema.name}"/>
    </changeSet>
</databaseChangeLog>