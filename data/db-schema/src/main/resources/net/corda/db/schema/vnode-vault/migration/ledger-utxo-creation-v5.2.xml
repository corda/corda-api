<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet author="R3.Corda" id="ledger-utxo-creation-v5.1">
        <createTable tableName="utxo_transaction_merkle_proof">
            <column name="transaction_id" type="VARCHAR(160)">
                <constraints nullable="false"/>
            </column>
            <column name="group_idx" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="tree_size" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="leaves" type="INTEGER[]">
                <constraints nullable="false"/>
            </column>
            <column name="hashes" type="VARCHAR[]">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="transaction_id, group_idx, leaves"
                       constraintName="utxo_transaction_merkle_proof_pkey"
                       tableName="utxo_transaction_merkle_proof"/>

    </changeSet>

</databaseChangeLog>